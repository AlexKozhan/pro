pipeline {
    agent any
    triggers {
        cron('H H * * 1')
    }
    stages {
        stage('Setup Environment') {
            steps {
                script {
                    sh 'python3 -m venv venv'
                    sh '. venv/bin/activate'
                    sh 'pip install -r requirements.txt'
                }
            }
        }
        stage('Run UI Tests') {
            steps {
                sh 'pytest --alluredir=allure-results -m UI'
            }
        }
    }
    post {
        always {
            allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
        }
    }
}
